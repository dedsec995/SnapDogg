<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/splashPrimary</item>
        <item name="colorPrimaryDark">@color/splashPrimaryDark</item>
        <item name="colorAccent">@color/splashAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/splashbackstart</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>


    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/linear_interpolator</item>
    </style>

</resources>